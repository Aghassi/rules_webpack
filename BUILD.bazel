load("@rules_pkg//:pkg.bzl", "pkg_tar")

# This declares the release artifact published to npm
pkg_tar(
    name = "rules_webpack",
    srcs = [
        "LICENSE",
        "README.md",
        "package.json",
    ],
    extension = "tgz",
    # It is all source code, so make it read-only.
    mode = "0444",
    # Make it owned by root so it does not have the uid of the CI robot.
    owner = "0.0",
    strip_prefix = ".",
    package_dir = "package",
)
